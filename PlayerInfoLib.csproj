    <Compile Remove="Migrations\20200723104849_MoreAttributes.cs" />
    <Compile Remove="Migrations\20200723104849_MoreAttributes.Designer.cs" />
    <Compile Remove="Migrations\20200723105031_Initial.cs" />
    <Compile Remove="Migrations\20200723105031_Initial.Designer.cs" />
